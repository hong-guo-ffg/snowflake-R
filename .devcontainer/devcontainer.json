{
  "name": "R Notebook",
  "image": "rocker/rstudio:4.2.2",                     
  "features": {
    // installs the R vscode extension & language server
    "ghcr.io/devcontainers/features/rust-cargo:1": {}
  },
  "extensions": [
    "REditorSupport.r",             // core R language support
    "REditorSupport.r-lsp",         // R LSP client
    "yzhang.markdown-all-in-one",   // markdown tooling
    "jkjustjoshing.r-markdown"      // R Markdown notebook preview
  ],
  "forwardPorts": [8787], 
  "postCreateCommand": "R -e 'install.packages(c(\"rmarkdown\",\"knitr\"))'"
}
